<UserControl x:Class="CNPM_29.Controls.Trang_chu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNPM_29.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <StackPanel >
            <Border Background="Gray" Height="100" Margin="0,10,0,10" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Số hộ khẩu" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Text="2" Foreground="White" FontSize="20" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="Gray" Height="100" Margin="0,10,0,10" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Số khoản thu" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Text="3" Foreground="White" FontSize="20" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
